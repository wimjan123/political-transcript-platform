# Database Configuration
POSTGRES_DB=political_transcripts
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
DATABASE_URL=postgresql://postgres:CHANGE_ME_TO_SECURE_PASSWORD@localhost:5433/political_transcripts

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
API_WORKERS=6  # Default worker count for dev scaling

# Frontend Configuration
## Frontend API base URL
# Leave empty to use relative URLs with CRA dev proxy (recommended for docker-compose dev)
# For production with custom domain, use: https://polibase.ai.thewillonline.nl/api
REACT_APP_API_URL=
REACT_APP_TITLE=PoliBase

# Data Configuration
HTML_DATA_DIR=/data/html
XML_DATA_DIR=/root/tweedekamer_scrape/tweede-kamer-scraper/output/xml/
PROCESSED_DATA_DIR=./data/processed
UPLOAD_DIR=./data/uploads

# Security
SECRET_KEY=CHANGE_ME_TO_SECURE_SECRET_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Development
DEBUG=true
LOG_LEVEL=INFO

# Meilisearch Configuration
MEILI_HOST=http://meilisearch:7700
MEILI_MASTER_KEY=CHANGE_ME_TO_SECURE_MEILI_KEY
MEILI_TIMEOUT=30000

# Optional AI Services
# OPENAI_API_KEY=your_openai_key_here
# OPENROUTER_API_KEY=your_openrouter_key_here

# Context7 MCP (optional)
# Used for up-to-date library docs in MCP-aware editors (Cursor, Claude, VS Code)
